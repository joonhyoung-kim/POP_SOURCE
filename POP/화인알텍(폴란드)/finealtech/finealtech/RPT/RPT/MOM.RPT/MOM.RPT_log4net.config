<?xml version="1.0" encoding="utf-8" ?>
<log4net>
  <appender name="COMMON.Appender" type="log4net.Appender.RollingFileAppender">
    <file type="log4net.Util.PatternString" value="C:/SMARTMOM/MOM.RPT/Log/"/>
    <appendToFile value="true"/>
    <rollingStyle value="Date"/>
    <datePattern value="yyyyMMdd/HH/'COMMON.log'" />
    <preserveLogFileNameExtension value="true"/>
    <maxSizeRollBackups value="100"/>
    <maximumFileSize value="50MB"/>
    <staticLogFileName value="false"/>
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%date|%-5level|%logger|%-5thread|%message%newline"/>
    </layout>
  </appender>
  
  <appender name="EXCEPTION.Appender" type="log4net.Appender.RollingFileAppender">
    <file type="log4net.Util.PatternString" value="C:/SMARTMOM/MOM.RPT/Log/"/>
    <appendToFile value="true"/>
    <rollingStyle value="Date"/>
    <datePattern value="yyyyMMdd/HH/'EXCEPTION.log'" />
    <preserveLogFileNameExtension value="true"/>
    <maxSizeRollBackups value="100"/>
    <maximumFileSize value="50MB"/>
    <staticLogFileName value="false"/>
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%date|%-5level|%logger|%-5thread|%message%newline"/>
    </layout>
  </appender>
  
  <appender name="ConsoleAppender" type="log4net.Appender.ConsoleAppender">
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%date [%thread] %-5level %logger [%property{NDC}] - %message%newline" />
    </layout>
  </appender>  
  
  <!--Set default logging level-->
  <logger name="COMMON">
    <level value="DEBUG" />
    <appender-ref ref="COMMON.Appender" />
    <appender-ref ref="ConsoleAppender" />
  </logger>
  <logger name="EXCEPTION">
    <level value="DEBUG" />
    <appender-ref ref="EXCEPTION.Appender" />
    <appender-ref ref="ConsoleAppender" />
  </logger>
</log4net>

