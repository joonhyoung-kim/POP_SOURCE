<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
    xmlns:dxr="http://schemas.devexpress.com/winfx/2008/xaml/ribbon"
    xmlns:dxb="http://schemas.devexpress.com/winfx/2008/xaml/bars"
    xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
    xmlns:sys="clr-namespace:System.Collections;assembly=mscorlib"
    xmlns:dxdv="http://schemas.devexpress.com/winfx/2008/xaml/documentviewer"
    xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
    xmlns:dxp="http://schemas.devexpress.com/winfx/2008/xaml/printing"
    xmlns:bh="clr-namespace:TU.Core.Behavior;assembly=TU.Core"
    xmlns:conv="clr-namespace:TU.Core.Converters;assembly=TU.Core"
    xmlns:models="clr-namespace:TU.Core.Models;assembly=TU.Core"
    >

    <!-- DevExpress RibbonControl -->
    <Style TargetType="dxr:RibbonControl">
        <Setter Property="ToolbarShowMode" Value="ShowAbove"/>
        <Setter Property="ToolbarItemLinksSource">
            <Setter.Value>
                <sys:ArrayList>
                    <dxr:RibbonSpacingSelectorItem Content="Spacing mode" MergeType="Replace"/>
                </sys:ArrayList>
            </Setter.Value>
        </Setter>
    </Style>
    <Style TargetType="ContentControl">
        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
        <Setter Property="VerticalContentAlignment" Value="Stretch" />
    </Style>

    <Style TargetType="bh:RibbonStyleSelectorItem">
        <Setter Property="RibbonStyle" Value="SmallWithText"/>
        <Setter Property="Content" Value="{Binding SelectedRibbonStyle, RelativeSource={RelativeSource Self}, Converter={StaticResource RibbonStyleToCaptionConverter}}"/>
        <Setter Property="ActAsDropDown" Value="True"/>
        <Setter Property="Glyph" Value="{Binding SelectedRibbonStyle, RelativeSource={RelativeSource Self}, Converter={StaticResource RibbonStyleToGlyphConverter}}"/>
        <Setter Property="MergeType" Value="Replace" />
        <Setter Property="PopupTemplate">
            <Setter.Value>
                <DataTemplate>
                    <dxb:GalleryControl Name="galleryControl">
                        <dxb:Gallery AllowFilter="False" ItemDescriptionHorizontalAlignment="Left" AutoHideGallery="True" ItemCheckMode="Single" ColCount="1">
                            <dxb:GalleryItemGroup Caption="Classic">
                                <dxb:GalleryItem Caption="Office Classic" Description="MS Office Classic style Ribbon" IsChecked="{Binding Selector.SelectedRibbonStyle, Mode=TwoWay, Converter={StaticResource objectsEqualityConverter}, ConverterParameter=Office2010}" Glyph="{dx:SvgImageSource Uri='pack://application:,,,/DevExpress.OutlookInspiredApp.Wpf;component/Resources/RibbonStyle/Office2010.svg'}"/>
                            </dxb:GalleryItemGroup>
                            <dxb:GalleryItemGroup Caption="Tablet">
                                <dxb:GalleryItem Caption="Tablet Office" Description="Emulates the UI found in MS Office for iPad" IsChecked="{Binding Selector.SelectedRibbonStyle, Mode=TwoWay, Converter={StaticResource objectsEqualityConverter}, ConverterParameter=TabletOffice}" Glyph="{dx:SvgImageSource Uri='pack://application:,,,/DevExpress.OutlookInspiredApp.Wpf;component/Resources/RibbonStyle/TabletOffice.svg'}"/>
                                <dxb:GalleryItem Caption="Office Slim" Description="MS Office Store inspired Ribbon" IsChecked="{Binding Selector.SelectedRibbonStyle, Mode=TwoWay, Converter={StaticResource objectsEqualityConverter}, ConverterParameter=OfficeSlim}" Glyph="{dx:SvgImageSource Uri='pack://application:,,,/DevExpress.OutlookInspiredApp.Wpf;component/Resources/RibbonStyle/OfficeSlim.svg'}"/>
                            </dxb:GalleryItemGroup>
                        </dxb:Gallery>
                    </dxb:GalleryControl>
                </DataTemplate>
            </Setter.Value>
        </Setter>
    </Style>


    <!-- NavBarControl HierachicalDataTemplate -->
    <HierarchicalDataTemplate DataType="{x:Type models:UserMenuItem}" ItemsSource="{Binding Path=Children}">
        <TextBlock Text="{Binding Path=Description}" />
    </HierarchicalDataTemplate>


</ResourceDictionary>