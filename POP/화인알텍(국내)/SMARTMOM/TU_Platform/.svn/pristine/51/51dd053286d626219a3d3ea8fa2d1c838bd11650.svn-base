apply plugin: 'java'
apply plugin: 'war'
apply plugin: 'eclipse-wtp'

sourceCompatibility = JavaVersion.VERSION_1_8
targetCompatibility = JavaVersion.VERSION_1_8
[compileJava, compileTestJava]*.options*.encoding = 'UTF-8'

eclipse {
	classpath {
		downloadSources = true
	}
	
    wtp {
        component {
            contextPath = '/'
        }
        
        facet {
            facet name: 'jst.web', version: '3.0'
            facet name: 'java', version: '1.8'
            facet name: 'wst.jsdt.web', version: '1.0'
        }
    }
}

dependencies {
    compileOnly	group: 'javax.servlet',						name: 'javax.servlet-api',			version: '3.0.1'
    
	// MicaFramework
	compile		group: 'com.thirautech',					name: 'Micaframe',					version: '0.1.5.9', changing: true
	compile		group: 'com.thirautech.module',				name: 'GatewayForMybatis',			version: '0.1.6.16', changing: true
	compile		group: 'com.thirautech.module',				name: 'MenuForMybatis',				version: '0.1.3.6',	changing: true
	compile		group: 'com.thirautech.module',				name: 'AuthForMybatis',				version: '0.1'

	//compile group: 'org.mariadb.jdbc', 					name: 'mariadb-java-client', 		version: '2.2.4'
	// oracle jdbc dependency
	compile		group: 'com.oracle',						name: 'ojdbc6', 					version: '12.1.0.1-atlassian-hosted'
	
	// mssql server jdbc dependency
	compile		group: 'com.microsoft.sqlserver',			name: 'sqljdbc4', 					version: '4.0'
	
	// hyjeong, Excel read/write dependency
	compile		group: 'org.apache.poi',					name: 'poi', 						version: '3.11'
	compile		group: 'org.apache.poi',					name: 'poi-ooxml', 					version: '3.11'
	
	// hyjeong, File Upload
	compile		group: 'commons-fileupload',				name: 'commons-fileupload', 		version: '1.3.2'
	compile		group: 'commons-io',						name: 'commons-io', 				version: '2.5'
	compile		group: 'cglib',								name: 'cglib', 						version: '2.2'
	
	// hyjeong, mail
	compile		group: 'javax.activation',					name: 'activation',					version: '1.1'
	compile 	group: 'javax.mail', 						name: 'javax.mail-api', 			version: '1.6.0'
	compile		group: 'com.sun.mail', 						name: 'javax.mail', 				version: '1.5.1'
	
	compile		group: 'javax.ws.rs',						name: 'javax.ws.rs-api', 			version: '2.0'
	
	compile     group: 'org.mybatis',                       name: 'mybatis-spring',             version: '1.3.2'
    compile     group: 'org.mybatis',                       name: 'mybatis',                    version: '3.4.6'
    
    compile     group: 'org.apache.commons',                name: 'commons-math3',              version: '3.6.1'
    compile     group: 'javax.servlet',                     name: 'javax.servlet-api',          version: '3.0.1'
    compile     group: 'org.apache.shiro',                  name: 'shiro-spring',               version: '1.4.0'
    compile     group: 'org.springframework',               name: 'spring-webmvc',              version: '5.0.4.RELEASE'
    compile     group: 'org.springframework.data',          name: 'spring-data-jpa',            version: '2.0.6.RELEASE'
    compile     group: 'com.fasterxml.jackson.module',      name: 'jackson-module-parameter-names', version: '2.9.4'
    compile     group: 'com.fasterxml.jackson.datatype',    name: 'jackson-datatype-jdk8',      version: '2.9.4'
    compile     group: 'com.fasterxml.jackson.datatype',    name: 'jackson-datatype-jsr310',    version: '2.7.4'
    compile     group: 'javax.persistence',                 name: 'javax.persistence-api',      version: '2.2'
    compile     group: 'org.hibernate',                     name: 'hibernate-core',             version: '5.2.12.Final'
    compile     group: 'com.auth0',                         name: 'java-jwt',                   version: '3.3.0'
    compile     group: 'org.aspectj',                       name: 'aspectjweaver',              version: '1.8.13'
    compile     group: 'de.flapdoodle.embed',               name: 'de.flapdoodle.embed.mongo',  version: '2.0.1'
    compile     group: 'org.apache.logging.log4j',          name: 'log4j-slf4j-impl',           version: '2.10.0'
    compile     group: 'org.slf4j',                         name: 'jcl-over-slf4j',             version: '1.7.25'
    compile     group: 'org.bgee.log4jdbc-log4j2',          name: 'log4jdbc-log4j2-jdbc4.1',    version: '1.16'
	//compile		group: 'org.glassfish.jersey.core',			name: 'jersey-common', 			 	version: '2.22.2'
	//compile 	group: 'com.sun.jersey', 					name: 'jersey-server', 				version: '1.2'
	
	// Use JUnit test framework
    testImplementation 'junit:junit:4.12'
    testImplementation 'org.springframework:spring-test:5.0.4.RELEASE'
}

// In this section you declare where to find the dependencies of your project
repositories {
    // Use jcenter for resolving your dependencies.
    // You can declare any Maven/Ivy/file repository here.
    maven {
    	//url "http://ux.thirautech.com:8081/nexus/content/groups/public/"
    	url "http://13.124.21.128:8081/nexus/content/groups/public/"
    }
}
